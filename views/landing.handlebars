<body class="bg-info">
    <div class="jumbotron d-flex flex-column my-0">
        <h1 class="display-4 mx-auto my-0">Welcome to Town Crier!</h1>
        <h3 id="location" class="display-6 mx-auto my-2">CITY, STATE</h3>
        {{!-- <img src="../public/assets/town-crier-OFFICIAL-LOGO.png" class="rounded"
            alt="Man yelling into megaphone."> --}}
        {{!-- <div id="navbar" class="col">navbar</div> --}}
    </div>

<div>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-2">
        <a class="navbar-brand" href="#" type="button">Create New Comment</a>
        <a class="nav-link" href="/homepage" type="button">Home</a>
    </nav>

    <section id="create-post-form" class="d-none bg-light w-50" style="position:fixed; top: 25%; left: 25%; transition:cubic-bezier(1, 0, 0, 1);">
        <div id="popup-container" class="d-flex flex-column border border-dark mx-auto rounded">
            <div class="d-flex flex-row">
                <h1 class="text-center text-dark ml-5">Create a Post!</h1>
                <button id="closebtn" class="btn btn-sm btn-danger m-2" style="height: 50%;">X</button>
            </div>
            <div class="form-group mx-2">
                <label for="exampleFormControlInput1">Title</label>
                <input id='posttitle' type="text" class="form-control" id="exampleFormControlInput1" placeholder="Title">
            </div>
            <div class="form-group mx-2">
                <label for="exampleFormControlInput1">Post</label>
                <input id="postcontent" type="text" class="form-control" id="exampleFormControlInput1" placeholder="Comment">
            </div>
            <button id="submitbtn" type="button" class="btn btn-primary mx-auto w-25 mb-2">Submit!</button>
        </div>
    </section>


    <section class="container-fluid mb-5">
        <div class="row d-flex flex-column">
            <div class="d-flex mx-auto flex-column justify-content-around w-75">

            <div class="d-flex flex-row mx-auto p-2 border border-dark w-75 rounded justify-content-between">
                <div id="post-title" class="font-weight-bold">{{postData.post_title}}</div>
                <div id="post-date" class="font-weight-bold">{{postData.created_at}}</div>
            </div>
            <div id="post-cont" class="d-flex flex-row mx-auto mt-2 p-2 border border-dark w-75 rounded">
                <div id="post-body" class="text-monospace">{{postData.post_text}}</div>
            </div>
            <div id="comment-container" class="d-flex flex-column mx-auto mt-2 p-2 border border-dark rounded w-75">
                {{#if postData.length }}
                {{#each postData.comments as |comment|}}
                <div class="comment my-2">{{comment.comment_text}}</div>
                {{/each}}
                {{else}}
                <div class="w-100 p-2 mb-3">
                    <h2 class="text-center">There are no comments for this post just yet. Be the first!</h2>
                </div>
                {{/if}}
                
        </div>
    </section>


    <script src='/js/landing.js'></script>
</body>